{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "es2020",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "typeRoots": [
      "./node_modules/@types",
      "./src/util/@types"
    ],
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "newLine": "lf",
    "strict": false
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "out",
    "test",
    "tmp",
    "logs"
  ]
}
