<%- include('../templates/includes.ejs') %>

<title>
    Classes
    </title>

<%- include('../templates/header.ejs') %>
<body>

<%- include('../templates/spinner.ejs') %>

<div class="container" id="container" style="display: none;">

    <div class="animate__animated animate__fadeInDown">
      <div class="alert alert-success" role="alert" style="position:relative;transform:translateY(100%);">
        Pre-Calculus Honors is live in the virtual classroom. <a href="#" class="alert-link">Join now.</a>
      </div>
      </div>

<div class="row">
<div class="animate__animated animate__fadeInUp">
<div id="school-announcements">

    <div class="rounded-lg card justify-content-center align-items-center" style="position:relative;margin-top:14%;">
        <div class="card-header background-image" style="background-color:black;">
            </div>
            <img class="front-profile-picture" src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/40/Round_Landmark_School_Icon_-_Transparent.svg/512px-Round_Landmark_School_Icon_-_Transparent.svg.png">
        <div class="card-body">
                AFE Announcements
            </div>
        </div>

    </div>
    </div>
</div>

<div class="animate__animated animate__fadeInUp">
    <div class="animate__animated animate__fadeInUp">

<div class="container" id="classes" style="margin-top:8%">

  <div class="card justify-content-center" style="border:0;">

    <% let c_c = 0; %>
    <% while(classes[c_c]) { %>
        <% if (c_c === 0) { %>
            <div class="row">
            <% } %>
        
        <% if (c_c % 4 === 0 && c_c !== 0) { %>
            </div>
            <div class="row">
            <% } %>
            <div class="col md-lg">
                <div class="rounded-lg card" style="width: 18rem;margin-bottom:20px;">
                    <div class="card-body">
                      <h5 class="card-title"><%= classes[c_c].name %></h5>
                      <h6 class="card-subtitle mb-2 text-muted"><%= classes[c_c].t_name %></h6>
                      <p class="card-text"><%= classes[c_c].description %></p>
                      <a href="#" class="card-link">Classroom</a>
                      <a href="/app/classroom/<%= classes[c_c].id %>" class="card-link">View Assignments</a>
                    </div>
                  </div>
                </div>
            
        <% c_c++; } %>

        </div>

</div>
</div>
    
    </div>

</body>

<style>

    .background-image
    {
        background-size:cover;
        height: 175px;
        width:50%;
        z-index: -1;
        border: 0px;
        border-radius: 0px;
    }

    .front-profile-picture
    {
        max-width: 250px; 
        max-height: 150px;
        margin-top: -160px; 
        margin-bottom: 5px; 
        border: 3px solid #fff; 
        border-radius: 0%; 
    }

    </style>